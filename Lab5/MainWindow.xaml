<Window x:Class="Lab5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5"
        mc:Ignorable="d"
        xmlns:sys="http://schemas.microsoft.com/winfx/2009/xaml"
        Title="MainWindow" Height="450" Width="800" FontSize="24">
    <DockPanel LastChildFill="True">
        <Menu Height="35" DockPanel.Dock="Top" Background="LightSteelBlue" FontSize="24">
            <MenuItem Header="Shape" Click="MenuItemShape_Click" />
            <MenuItem Header="File" >
                <MenuItem x:Name="menuItemSave" Header="Save" Command="Save" />
                <MenuItem x:Name="menuItemOpen" Header="Open" Command="Open" />
            </MenuItem>
            <MenuItem x:Name="menuItemHelp" Header="Help" Command="Help" />
            <MenuItem x:Name="menuItemExit" Header="Exit" Command="Close" />
        </Menu>
        <ToolBar DockPanel.Dock="Top" Height="40">
            <Button x:Name="buttonShape" Content="→" ToolTip="Shape" Click="MenuItemShape_Click"/>
            <Button x:Name="buttonSave" Content="💾" Command="Save"/>
            <Button x:Name="buttonOpen" Content="📂" Command="Open"/>
            <Button x:Name="buttonHelp" Content="ℹ️" Command="Help"/>
            <Button x:Name="buttonExit" Content="❌" Command="Close"/>
        </ToolBar>
        <StatusBar Height="35" Background="LightSeaGreen" DockPanel.Dock="Bottom">
            <TextBlock x:Name="textBlockCursorPosition" Width="300"/>
        </StatusBar>

        <Canvas x:Name="canvas" Background="Beige" MouseDown="canvas_MouseDown" MouseMove="canvas_MouseMove">
            <Rectangle Width="200" Height="50 " Canvas.Left="570" Canvas.Top="70" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                        <GradientStop Offset="0" Color="DarkBlue"/>
                        <GradientStop Offset="1" Color="DarkOrange"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>

                <Rectangle.Triggers>
                    <EventTrigger RoutedEvent="Rectangle.MouseDown">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RadiusX" From="0" To="20" 
                                                 Duration="0:0:3" AutoReverse="True" RepeatBehavior="Forever"/>

                                <DoubleAnimation Storyboard.TargetProperty="RadiusY" From="0" To="20" 
                                            Duration="0:0:3" AutoReverse="True" RepeatBehavior="Forever"/>

                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Rectangle.Triggers>
            </Rectangle>
        </Canvas>
    </DockPanel>
</Window>

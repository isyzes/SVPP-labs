<Window x:Class="Lab2_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2_1"
        mc:Ignorable="d"
        Title="Водительская лицензия" Height="600" Width="900" FontSize="20">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/background.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="DRIVER'S LICENSE" 
               Grid.Column="1" 
               Grid.ColumnSpan="2" 
               FontSize="36"
               FontWeight="UltraBlack"
               FontFamily="Comic Sans MS"
               HorizontalContentAlignment="Center"/>

        <Image Grid.RowSpan="6" 
               Name="image"
               Source="/Images/placeholder.png" MouseDown="Image_MouseDown" />

        <TextBox Name="textBoxName" 
                 Grid.Column="1"
                 Grid.Row="1"
                 Margin="10"
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center" />

        <TextBox Name="textBoxNumber" 
                 Grid.Column="2"
                 Grid.Row="1"
                 Margin="10"
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center" />

        <TextBox Name="textBoxAddress" 
                 Grid.Column="1"
                 Grid.Row="2"
                 Margin="10"
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"/>

        <StackPanel Grid.Row="2" 
                    Grid.Column="2"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
            <Label Content="CLASS" 
                   Margin="20 0"/>
            <TextBox Name="textBoxClass" 
                     Grid.Column="1"
                     Grid.Row="2"
                     Width="50"
                     Margin="20 0"
                     MaxLength="1"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center" />
        </StackPanel>

        <StackPanel Grid.Row="3" 
                    Grid.Column="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
            <Label Content="DOB"
                   Margin="20 0"/>

            <DatePicker Name="datePickerDOB"/>
        </StackPanel>

        <StackPanel Grid.Row="3" 
                    Grid.Column="2"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
            <Label Content="ISS"
                   Margin="20 0" />

            <DatePicker Name="datePickerISS"/>
        </StackPanel>

        <StackPanel Grid.Row="4" 
                    Grid.Column="2"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
            <Label Content="EXP"
                   Margin="20 0"/>

            <DatePicker Name="datePickerEXP"/>
        </StackPanel>

        <GroupBox Grid.Row="4" Grid.Column="1" Header="Sex">
            <StackPanel Orientation="Horizontal">
                <RadioButton Name="radioButtonMale" Content="male" Margin="5 0"/>
                <RadioButton Name="radioButtonFemale" Content="female" Margin="5 0"/>
                <RadioButton Name="radioButtonVariant" Content="variant" Margin="5 0"/>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="5" 
                    Grid.Column="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
            <Label Content="Eyes"
                   Margin="20 0"/>

            <ComboBox Name="comboBoxEyes" Width="150">

            </ComboBox>

        </StackPanel>

        <StackPanel Grid.Row="6" 
                    Grid.Column="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
            <Label Content="HGT"
                   Margin="20 0"/>

            <Slider Width="170" 
                    Minimum="140" 
                    Maximum="220" 
                    Name="sliderHgt"
                    TickFrequency="10"
                    AutoToolTipPlacement="TopLeft"
                    TickPlacement="TopLeft"/>
        </StackPanel>

        <CheckBox Name="checkBoxDonor" Grid.Row="6"
                  Grid.Column="0" 
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Content="ORGAN DONOR"/>

        <Button Grid.Row="7" Grid.Column="0" Margin="10,10,10,0" Content="Load" Height="53" VerticalAlignment="Top" Click="ButtonLoad_Click"/>
        <Button Grid.Row="8" Grid.Column="1" Margin="10 10" Content="Save" Click="ButtonSave_Click"/>
        <Button Grid.Row="8" Grid.Column="3" Margin="10 10" Content="Clear" Click="ButtonClear_Click"/>
    </Grid>
</Window>

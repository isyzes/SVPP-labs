<Window x:Class="Lab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Бомбометание с самолета" Height="570" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Background="LightGray">
            <Button x:Name="StartPauseButton" Content="Старт" Click="StartPauseButton_Click" 
                    Margin="5" Padding="10,5"/>
            <Button x:Name="ResetButton" Content="Сброс" Click="ResetButton_Click" 
                    Margin="5" Padding="10,5"/>
            <Button x:Name="DropBombButton" Content="Сбросить бомбу" Click="DropBombButton_Click" 
                    Margin="5" Padding="10,5"/>
        </StackPanel>


        <local:BombingGameControl x:Name="GameControl" Grid.Row="1" 
                                  BombInfoRequested="GameControl_BombInfoRequested"
                                  AirplaneInfoRequested="GameControl_AirplaneInfoRequested"/>
            
            
        <StackPanel Grid.Row="2" Margin="10" Background="White">
            <TextBlock x:Name="InfoText" Text="Информация об объектах будет отображаться здесь" 
                       Margin="5" FontSize="14"/>
            <TextBlock Text="Кликните по самолету или бомбе для информации" 
                       Margin="5" FontSize="12" Foreground="Gray"/>
        </StackPanel>
    </Grid>
</Window>
